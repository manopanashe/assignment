  <body class="text-center">
    <form class="form-signin" method="POST" action="/join">
    <h1 class="h3 mb-3 font-weight-normal">New User</h1>
    <label for="name" >Enter Email address</label>
    <label for="name" class="sr-only">Email address</label>
    <input 
    name="email"
    type="email" 
    id="email"
    class="form-control" 
    placeholder="Email address" 
    />
  <% if (errors['email']) { %>
    <p style="color: red"><%= errors['email'].message %></p>
    <% } %>
    <label for="name" >Construct Password</label>
  <label for="password" class="sr-only">Password</label>
  <input
   name="password"
   type="password" 
   id="password"
   class="form-control" 
   placeholder="Password"

  />
  <% if (errors['password']) { %>
    <p style="color: red"><%= errors['password'].message %></p>
    <% } %>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">&copy; J Clarke</p>
</form>
</body>
